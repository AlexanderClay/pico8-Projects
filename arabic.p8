__lua__

-- 1- do it like tiny text
-- 2- or like egor's advice
-- https://8bit-caaz.tumblr.com/post/171458093376/layering-sprite-data

fntspr=18
fntdefaultcol=7
fnt={}

--shorthand to make font tables
function initchar(x,y,dy,h,w,fx,fy)
 local t={}
 local fntsprx=(fntspr%16)*8
 local fntspry=flr((fntspr/16))*8
 t["x"] = fntsprx+(x or 0)
 t["y"] = fntspry+(y or 0)
 t["dy"] = dy
 t["w"] = w
 t["h"] = h
 t["fx"] = fx -- flip hor
 t["fy"] = fy -- flip vert
 return t
end

--call in _init to setup font
function initfont()
 fnt = {}
 fnt["a"] = initchar(2,5)
 fnt["b"] = initchar(2,3,2,5,nil,true)
 fnt["c"] = initchar(7,5)
 fnt["d"] = initchar(2,3,2,5)
 fnt["e"] = initchar(11,5)
 fnt["f"] = initchar(3,nil,2,5,nil,true)
 fnt["g"] = initchar(9,3,nil,5)
 fnt["h"] = initchar(6,nil,2,5,nil,nil,true)
 fnt["i"] = initchar(nil,2,2,5,2)
 fnt["j"] = initchar(nil,2,2,6,2)
 fnt["k"] = initchar(6,3,2,5)
 fnt["l"] = initchar(12,nil,2,5,2,true,true)
 fnt["m"] = initchar(4,5)
 fnt["n"] = initchar(6,nil,nil,nil,nil,nil,true)
 fnt["o"] = initchar()
 fnt["p"] = initchar(13,1,nil,5)
 fnt["q"] = initchar(13,1,nil,5,nil,true)
 --fnt["r"] = initchar(13,4,nil,nil,nil,nil,true)
 fnt["r"] = initchar(11,nil,nil,nil,nil,true)
 fnt["s"] = initchar(12,3)
 fnt["t"] = initchar(3,0,1,4,nil,true,true)
 fnt["u"] = initchar(6,0,nil,nil,nil,true)
 fnt["v"] = initchar(8,0)
 fnt["w"] = initchar(4,4)
 fnt["x"] = initchar(1)
 fnt["y"] = initchar(11,3,nil,5,nil,true)
 fnt["z"] = initchar(12,3,nil,nil,nil,nil,true)
end

--prints text in all lowercase
function printlower(str,x,y,col)
 col=col or fntdefaultcol
 pal(7,col)
 for i=1,#str do
  c=sub(str,i,i)
  if c>="a" and c<="z" then
   px=x+(i-1)*4
   --if (fnt[c].dx) px+=fnt[c].dx
   py=y+2
   if (fnt[c].dy) py-=fnt[c].dy
   w=fnt[c].w or 3
   h=fnt[c].h or 3
   sspr(fnt[c].x,fnt[c].y,w,h,px,py,w,h,fnt[c].fx,fnt[c].fy)
  else
   print(c,x+(i-1)*4,y,col)
  end
 end
 pal()
end

--capitalizes first word only
function printfirst(str,x,y,col)
 print(sub(str,1,1),x,y,col)
 printlower(sub(str,2),x+4,y,col)
end

--capitalizes every word
function printevery(str,x,y,col)
 prev=1
 for i=1,#str do
  if sub(str,i,i)==" " then
   s=sub(str,prev,i)
   printfirst(s,x,y,col)
   x+=(#s)*4
   prev=i+1
  end
 end
 printfirst(sub(str,prev),x,y,col)
end

function _init()
 initfont()
end

function _update()
 if (btnp(4)) demomode=1
 if (btnp(5)) demomode=nil
end

function _draw()
 if (demomode==1) then
  demosprite()
 else
  demotext()
 end
end

function demotext()
 cls()
 chars="abcdefghijklmnopqrstuvwxyz"
 x=1
 y=5
 linedy=8
 spacedy=12
 printevery("mini text by connor halford",x,y,7)
 y+=spacedy
 print(chars,x,y,8)
 y+=linedy
 printlower(chars,x,y,8)
 y+=spacedy
 printevery("aa bb cc dd ee ff gg hh ii jj",x,y,4)
 y+=linedy
 printevery("kk ll mm nn oo pp qq rr ss tt",x,y,4)
 y+=linedy
 printevery("uu vv ww xx yy zz",x,y,4)
 y+=spacedy
 printlower("now you can print in lowercase",x,y,11)
 y+=spacedy
 printfirst("there's a function for just",x,y,12)
 y+=linedy
 printlower("capitalizing the first word,",x,y,12)
 y+=spacedy
 printevery("and another for capitalizing",x,y,9)
 y+=linedy
 printevery("every word in the string.",x,y,9)
 y+=spacedy
 printfirst("all done with just 2 sprites!",x,y,14)
end

function demosprite()
 cls()
 local chars="abcdefghijklmnopqrstuvwxyz"
 local fntsprx=(fntspr%16)*8
 local fntspry=flr((fntspr/16))*8
 pal()
 spr(fntspr,6,0,2,1)
 for i=1,#chars do
  c=sub(chars,i,i)
  x=(i%4)*30
  y=flr(i/4)*20
  printlower(c,x,y+1)
  pal(7,5)
  spr(fntspr,x+6,y,2,1)
  if (fnt[c].fx and fnt[c].fy) then
   pal(7,8)
  elseif (fnt[c].fx) then
   pal(7,9)
  elseif (fnt[c].fy) then
   pal(7,10)
  else
   pal(7,11)
  end
  local px = fnt[c].x-fntsprx
  local py = fnt[c].y-fntspry
  local w=fnt[c].w or 3
  local h=fnt[c].h or 3
  sspr(fnt[c].x,fnt[c].y,w,h,x+6+px,y+py,w,h)
 end
end

